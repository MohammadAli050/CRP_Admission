    </asp:ContentPlaceHolder>

    <script>
        function Apply() {
            $('html, body').animate({
                scrollTop: $("#featured-services").offset().top + 0
            }, 1000);
        }

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })


    </script>


